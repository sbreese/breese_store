<header<%- path === '/new-arrivals' ? ' class="header-v3"' : path === '/featured' ? ' class="header-v2"' : path !== '/' ? ' class="header-v4"' : '' %>>
    <!-- Header desktop -->
    <div class="container-menu-desktop">
        <!-- Topbar -->
        <div class="top-bar">
            <div class="content-topbar flex-sb-m h-full container">
                <div class="left-top-bar">
                    Free shipping for standard order over $100
                </div>

                <div class="right-top-bar flex-w h-full">
                    <a href="#" class="flex-c-m trans-04 p-lr-25">
                        Help & FAQs
                    </a>

                    <% if (!isAuthenticated) { %>
                        <a class="flex-c-m trans-04 p-lr-25<%= path === '/login' ? ' active' : '' %>" href="/login">Login</a>
                        <a class="flex-c-m trans-04 p-lr-25<%= path === '/create-user-account' ? ' active' : '' %>" href="/<%- cart_total ? 'checkout-shipping-address">Checkout' : 'create-user-account">Signup' %></a>
                    <% } else { %>
                        <a class="flex-c-m trans-04 p-lr-25<%= path === '/edit-account' ? ' active' : '' %>" href="/edit-account">My Account</a>
                        <form action="/logout" method="post">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <button class="flex-c-m trans-04 p-lr-25" type="submit" style="font-family: Poppins-Regular;font-size: 12px;line-height: 1.8;height: 100%;color: #b2b2b2;border-right: 1px solid rgba(255,255,255,0.3);">Logout</button>
                        </form>
                    <% } %>
                </div>
            </div>
        </div>

        <div class="wrap-menu-desktop<%- path === '/about' || path === '/shopping-cart' ? ' how-shadow1' : '' %>" style="top: 40px;">
            <nav class="limiter-menu-desktop container">
                
                <!-- Logo desktop -->		
                <a href="#" class="logo">
                    <img src="/images/icons/logo-0<%- path === '/new-arrivals' ? '2' : '1' %>.png" alt="IMG-LOGO">
                </a>

                <!-- Menu desktop -->
                <div class="menu-desktop">
                    <ul class="main-menu">
                        <li<%- path === '/' ? ' class="active-menu"' : '' %>>
                            <a href="/">Home</a>
                            <ul class="sub-menu">
                                <li><a href="/"">Homepage 1</a></li>
                                <li><a href="/product">Product</a></li>
                                <li><a href="home-03.html">Homepage 3</a></li>
                            </ul>
                        </li>

                        <li<%- path === '/new-arrivals' ? ' class="active-menu"' : '' %>>
                            <a href="/new-arrivals">New Arrivals</a>
                        </li>

                        <li class="label1<%- path === '/featured' ? ' active-menu' : '' %>" data-label1="hot">
                            <a href="/Featured">Featured</a>
                        </li>

                        <li<%- path === '/blog' ? ' class="active-menu"' : '' %>>
                            <a href="blog">Blog</a>
                        </li>

                        <li<%- path === '/about' ? ' class="active-menu"' : '' %>>
                            <a href="about">About</a>
                        </li>

                        <li<%= path === '/contact' ? ' class="active-menu"' : '' %>>
                            <a href="contact">Contact</a>
                        </li>
                    </ul>
                </div>	

                <!-- Icon header -->
                <div class="wrap-icon-header flex-w flex-r-m">
                    <div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 js-show-modal-search">
                        <i class="zmdi zmdi-search"></i>
                    </div>

                    <!-- Show Cart -->
                    <%- include('./show-cart.ejs') %>

                    <%- include('./link-to-wishlist.ejs') %>
                    
                </div>
            </nav>
        </div>	
    </div>

    <!-- Header Mobile -->
    <div class="wrap-header-mobile">
        <!-- Logo mobile -->		
        <div class="logo-mobile">
            <a href="/"><img src="images/icons/logo-01.png" alt="IMG-LOGO"></a>
        </div>

        <!-- Icon header -->
        <div class="wrap-icon-header flex-w flex-r-m m-r-15">
            <div class="icon-header-item cl2 hov-cl1 trans-04 p-r-11 js-show-modal-search">
                <i class="zmdi zmdi-search"></i>
            </div>

            <!-- Show Cart Mobile -->
            <%- include('./show-cart-mobile.ejs') %>

            <%- include('./link-to-wishlist-mobile.ejs') %>

        </div>

        <!-- Button show menu -->
        <div class="btn-show-menu-mobile hamburger hamburger--squeeze">
            <span class="hamburger-box">
                <span class="hamburger-inner"></span>
            </span>
        </div>
    </div>


    <!-- Menu Mobile -->
    <div class="menu-mobile">
        <ul class="topbar-mobile">
            <li>
                <div class="left-top-bar">
                    Free shipping for standard order over $100
                </div>
            </li>

            <li>
                <div class="right-top-bar flex-w h-full">
                    <a href="#" class="flex-c-m p-lr-10 trans-04">
                        Help & FAQs
                    </a>

                    <a href="#" class="flex-c-m p-lr-10 trans-04">
                        My Account
                    </a>

                    <a href="#" class="flex-c-m p-lr-10 trans-04">
                        EN
                    </a>

                    <a href="#" class="flex-c-m p-lr-10 trans-04">
                        USD
                    </a>
                </div>
            </li>
        </ul>

        <ul class="main-menu-m">
            <li>
                <a href="/">Home</a>
                <ul class="sub-menu-m">
                    <li><a href="index.html">Homepage 1</a></li>
                    <li><a href="home-02.html">Homepage 2</a></li>
                    <li><a href="home-03.html">Homepage 3</a></li>
                </ul>
                <span class="arrow-main-menu-m">
                    <i class="fa fa-angle-right" aria-hidden="true"></i>
                </span>
            </li>

            <li>
                <a href="product.html">Shop</a>
            </li>

            <li>
                <a href="/featured" class="label1 rs1" data-label1="hot">Featured</a>
            </li>

            <li>
                <a href="blog.html">Blog</a>
            </li>

            <li>
                <a href="about.html">About</a>
            </li>

            <li>
                <a href="contact.html">Contact</a>
            </li>
        </ul>
    </div>

    <!-- Modal Search -->
    <div class="modal-search-header flex-c-m trans-04 js-hide-modal-search">
        <div class="container-search-header">
            <button class="flex-c-m btn-hide-modal-search trans-04 js-hide-modal-search">
                <img src="images/icons/icon-close2.png" alt="CLOSE">
            </button>

            <form class="wrap-search-header flex-w p-l-15">
                <button class="flex-c-m trans-04">
                    <i class="zmdi zmdi-search"></i>
                </button>
                <input class="plh3" type="text" name="search" placeholder="Search...">
            </form>
        </div>
    </div>
</header>