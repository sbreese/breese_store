<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/excel2007.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (order) { %>

            <table class="ExcelTable2007">
                    <tr><th class="heading"></th><th>A</th><th>B</th><th>C</th><th>D</th><th>E</th></tr>
                    <tr><td class="heading">1</td><td>Customer:</td><td colspan="4"><a href="/admin/users/<%= order.user._id %>"><%= order.user.first_name %> <%= order.user.last_name %></a></td></tr>
                    <tr><td class="heading">2</td><td>Order #:</td><td colspan="4"><%= order._id %></td></tr>
                    <tr><td class="heading">3</td><td>Order Date:</td><td colspan="4"><%= order._id.getTimestamp().toLocaleString("en-US", {timeZone: "America/Chicago"}).replace(/:\d{2}\s/,' ') %></td></tr>
                    <tr><td class="heading">4</td><td>Invoice:</td><td colspan="4"><a href="/orders/<%= order._id %>">PDF format</a></td></tr>
                    <tr><td class="heading">5</td><td>Shipping<br>Address:</td><td colspan="4"><%= order.user.address_line1 %><%= order.user.address_line2 && '<br>' %><%= order.user.address_line2 %><br><%= order.user.city %>, <%= order.user.state %> <%= order.user.postalCode %><%= order.user.country !== 'USA' ? `<br>${order.user.country}` : '' %></td></tr>

                    <% if (order.products.length > 0) { %>
                        <tr><td class="heading">6</td><td colspan="5"><%= order.products.length %> Product<%= order.products.length > 1 ? 's' : '' %> Ordered:</td></tr>
                        <tr><td class="heading">7</td><td colspan="2">Product</td><td>Quanity</td></tr>
                        <% order.products && order.products.forEach((p, index) => { %>
                            <tr>
                                <td class="heading"><%= index + 8 %></td>
                                <td><%= p.product.title %></td><td><%= p.quantity %></td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr><td class="heading">8</td><td colspan="3">Order has no products! (this is very unusual and should be investigated)</td><td></td><td></td>
                    <% } %>

            </table>
            <p>
                    <input type="hidden" value="<%= order._id %>" name="orderId">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button class="btn" type="button" onclick="shippedOrder(this)">Shipped</button>
                    <button class="btn" type="button" onclick="confirm('Are you sure you want to delete this order (<%= order._id %>)?') && deleteOrder(this)">Delete</button>
            </p>
        <% } else { %>
            <h1>User Not Found!</h1>
        <% } %>
    </main>
        <%- include('../includes/end.ejs') %>
        <script src="/js/orders.js"></script>
        <script src="/js/users.js"></script>