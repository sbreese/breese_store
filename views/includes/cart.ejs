        <% if (cart_items.length > 0) { 
            let total = 0;
            %>
            <ul class="header-cart-wrapitem w-full">
                <% cart_items.forEach(p => { %>
                    <li class="header-cart-item flex-w flex-t m-b-12">

                        <% 
                        if (p.product) { 
                            total += p.quantity * p.product.price;
                        %>
                            <div class="header-cart-item-img">
                                <img src="<%= p.product.image1Url %>" alt="<%= p.product.title %>">
                            </div>

                            <div class="header-cart-item-txt p-t-8">
                                <a href="#" class="header-cart-item-name m-b-18 hov-cl1 trans-04">
                                    <%= p.product.title %>
                                </a>
    
                                <span class="header-cart-item-info">
                                        <%= p.quantity %> x $<%= p.product.price %>
                                </span>
                            </div>
                        <% } else { %>
                            <p>Product not found</p>
                        <% } %>
                    </li>
                <% }) %>
            </ul>

            <div class="w-full">
                <div class="header-cart-total w-full p-tb-40">
                    Total: $<%= total %>
                </div>

                <div class="header-cart-buttons flex-w w-full">
                    <a href="/shopping-cart" class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-r-8 m-b-10">
                        View Cart
                    </a>

                    <a href="/<%= true ? 'confirm-information' : 'customer-information' %>" class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-b-10">
                        Check Out
                    </a>
                </div>
            </div>
                        
            <% } else { %>
                <div class="w-full">
                    <div class="header-cart-total w-full p-tb-40">
                        Your Shopping Cart is empty.
                    </div>
                </div>
                <div class="w-full">
                    <div class="header-cart-total w-full p-tb-40">
                            Continue shopping on the <a href="/">The Breese Method homepage</a>.
                    </div>
                </div>
            <% } %>