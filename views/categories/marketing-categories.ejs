<%- include('../includes/headOLD.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                    
                <a class="<%= path === '/admin/add-category' ? 'active' : '' %>" href="/admin/add-category">Add Category
                </a>


                <% if (marketingCategories.length > 0) { %>
                    <div class="grid">
                        <% for (let category of marketingCategories) { %>
                            <article class="card category-item">
                                <header class="card__header">
                                    <h1 class="category__title">
                                        <%= category.title %>
                                    </h1>
                                    <h3 class="category__code">
                                        <%= category.code %>
                                    </h3>
                                </header>
                                <div class="card__content">
                                    <p class="category__description"><%= category.description %></p>
                                </div>
                                <div class="card__content">
                                        <p class="category__displayOrder"><%= category.displayOrder %></p>
                                </div>
                                <div class="card__actions">
                                    <a href="/admin/edit-category/<%= category._id %>?edit=true" class="btn">Edit</a>
                                    <input type="hidden" value="<%= category._id %>" name="categoryId">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <button class="btn deleteCategory" type="button" onclick="confirm('Are you sure you want to delete this category?') && deleteCategory(this)">Delete</button>
                                </div>
                            </article>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1>No Marketing Categories Found!</h1>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>
            <script src="/js/admin.js"></script>